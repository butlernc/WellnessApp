<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.wellnessapp.login.LoginActivity"
    android:background="#22468a"
    android:weightSum="1">

    <LinearLayout
        android:id="@+id/bonus_activity_list_item"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="20dp"
        android:background="#22468a">

        <LinearLayout
            android:layout_width="164dp"
            android:layout_height="200dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="top|center_horizontal"
            android:layout_marginRight="0dp"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Week 1: Physical Goal"
                android:id="@+id/week_display"
                android:textColor="#EDAC1A"
                android:textSize="18dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="New Text"
                android:id="@+id/goal"
                android:textSize="11dp"
                android:textColor="#ffffff"
                android:textIsSelectable="false" />

            <ImageView
                android:layout_width="fill_parent"
                android:layout_height="5dp"
                android:id="@+id/line"
                android:background="#2b3e85"
                android:layout_marginTop="5dp" />

            <ListView
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:id="@+id/desc_text_links_list" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="164dp"
            android:layout_height="200dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:background="@drawable/points_adder_background"
            android:gravity="top|center_horizontal"
            android:layout_marginRight="0dp"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1.2">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="30m cardio and 20m walk"
                    android:textColor="#ffffff"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    android:gravity="top|center_horizontal"
                    android:id="@+id/activity_short_desc"
                    android:layout_gravity="left"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="0dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="10dp" />
                <!--
                <Button
                    style="?android:attr/buttonStyleSmall"
                    android:layout_width="wrap_content"
                    android:layout_height="35dp"
                    android:text="More Info"
                    android:id="@+id/more_info_button_odd"
                    android:layout_gravity="center_horizontal"
                    android:textSize="10dp"
                    android:textStyle="italic"
                    android:textColor="#EDAC1A"
                    android:background="#22468a" />
                -->

            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="2">

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:text="12"
                    android:id="@+id/current_week_goal_points"
                    android:textAlignment="center"
                    android:textColor="#EDAC1A"
                    android:textStyle="bold"
                    android:textSize="15dp"
                    android:gravity="center_vertical|center_horizontal"
                    android:layout_weight="1" />

                <ImageButton
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:id="@+id/add_point_button"
                    android:background="@drawable/overlay"
                    android:layout_weight="1.5"
                    android:focusable="false" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/suggested_workout_link"
        android:textColor="#EDAC1A"
        android:singleLine="false"
        android:textSize="15dp"
        android:textStyle="italic" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/desc_scroll_view"
        android:layout_marginTop="5dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="New Text"
            android:id="@+id/goal_desc"
            android:textColor="#ffffff" />
    </ScrollView>

</LinearLayout>