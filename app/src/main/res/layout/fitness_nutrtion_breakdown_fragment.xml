<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    android:background="#22468a"
    android:weightSum="4">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/linearLayout_fitness_nutrition"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="20dp">

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:background="#2b3e85"
                    android:gravity="top|center_horizontal"
                    android:layout_marginRight="5dp"
                    android:layout_marginLeft="5dp">

                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:text="Fitness"
                        android:textColor="#edac1a"
                        android:textSize="20dp"
                        android:textStyle="bold"
                        android:gravity="top|center_horizontal"
                        android:id="@+id/fitness_points_label"
                        android:layout_weight="2"
                        android:background="#2b3e85"
                        android:layout_gravity="top">

                    </TextView>

                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:text="100"
                        android:textColor="#fff"
                        android:textSize="35dp"
                        android:textStyle="bold"
                        android:gravity="center_horizontal|fill_vertical"
                        android:id="@+id/fitness_points_tally"
                        android:layout_weight="2">

                    </TextView>



                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:background="#2b3e85"
                    android:gravity="top|center_horizontal"
                    android:layout_gravity="left|top"
                    android:layout_marginRight="5dp"
                    android:layout_marginLeft="5dp">

                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:text="Nutrition"
                        android:textColor="#edac1a"
                        android:textSize="20dp"
                        android:textStyle="bold"
                        android:gravity="top|center_horizontal"
                        android:id="@+id/nutrition_points_label"
                        android:layout_gravity="top"
                        android:layout_weight="2"
                        android:background="#2b3e85">

                    </TextView>

                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:text="400"
                        android:textColor="#fff"
                        android:textSize="35dp"
                        android:textStyle="bold"
                        android:gravity="center_horizontal|fill_vertical"
                        android:id="@+id/nutrition_points_tally"
                        android:layout_weight="2"
                        android:layout_gravity="top">

                    </TextView>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:background="#2b3e85"
                    android:gravity="top|center_horizontal"
                    android:layout_marginRight="5dp"
                    android:layout_marginLeft="5dp">

                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:text="Bonus Points"
                        android:textColor="#edac1a"
                        android:textSize="20dp"
                        android:textStyle="bold"
                        android:gravity="top|center_horizontal"
                        android:id="@+id/bonus_points_label"
                        android:layout_weight="2"
                        android:background="#2b3e85"
                        android:layout_gravity="top">

                    </TextView>

                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:text="100"
                        android:textColor="#fff"
                        android:textSize="35dp"
                        android:textStyle="bold"
                        android:gravity="center_horizontal|fill_vertical"
                        android:id="@+id/bonus_points_tally"
                        android:layout_weight="2">

                    </TextView>



                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:orientation="vertical"
                android:layout_weight="1">


                <com.github.mikephil.charting.charts.LineChart
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:id="@+id/fitness_graph"
                    android:layout_gravity="center_horizontal"
                    android:layout_weight="1" />

                <com.github.mikephil.charting.charts.LineChart
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:id="@+id/nutrition_graph"
                    android:layout_weight="1" />
            </LinearLayout>
        </LinearLayout>


</LinearLayout>