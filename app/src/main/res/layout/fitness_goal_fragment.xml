<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.wellnessapp.login.LoginActivity"
    android:background="#22468a"
    android:weightSum="1">

    <!-- <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/fitness_goal_week"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="48dp" /> -->
    <TextView
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Week 1: Physical Activity"
        android:id="@+id/week_display_physical"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:textSize="25dp"
        android:textColor="#fff"
        android:textStyle="bold">

    </TextView>

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/physical_activity"
        android:textSize="20dp"
        android:textColor="#EDAC1A"
        android:textStyle="bold"
        android:text="Goal: 3 days of 30 mins cardio"
        android:layout_marginBottom="15dp">
        </TextView>



    <HorizontalScrollView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/horizontalScrollView"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:paddingBottom="10dp"
        android:layout_gravity="center_horizontal">



    <LinearLayout
        android:id="@+id/linear_physical_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="10dp"
        android:orientation="horizontal"
        android:gravity="fill_horizontal">


        </LinearLayout>
    </HorizontalScrollView>




        <!-- reference for multiple colors:
        http://stackoverflow.com/questions/9288597/text-view-with-multiple-text-colors-android -->




    <ScrollView

        android:layout_width="match_parent"
        android:layout_height="260dp"
        android:id="@+id/scrollView"
        android:layout_weight="0.42">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="10dp">



    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/physical_activity_desc"
        android:text="Test"
        android:textColor="#fff"
        android:textSize="20dp"
        android:gravity="top"
        android:paddingTop="5dp"/>


    </LinearLayout>
    </ScrollView>

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Suggested Workout and Links"
        android:textColor="#EDAC1A"
        android:background="#22468a"
        android:id="@+id/physical_activity_links_button" />


</LinearLayout>